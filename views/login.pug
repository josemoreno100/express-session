extends layout

block content
  div(class="wrapper")
    div(class="form-signin")
      h1= title
      div
        span= message
      form(action="/users/registro",method="post")
      
        div(class="form-group")
            label(for="firstName") Firstname
            input(class="form-control" type="text", value="",name="firstName" placeholder="Firstname" autofocus)
        div(class="form-group")
            label(for="lastName") Lastname
            input(class="form-control" type="text", value="",name="lastName" placeholder="Lasttname" autofocus) 
        div(class="form-group")
            label(for="email") Email
            input(class="form-control" type="text", value="",name="email" placeholder="Email" autofocus)  

        div(class="form-group")    
            label(for="password") Password
            input(class="form-control" type="password", value="",name="password" placeholder="Password")
        
        div(class="form-group")
            div(class="text-right")
            button(class="btn btn-primary" type="submit") Sign in